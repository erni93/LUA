@model lua.Models.ViewModels.SeccionViewModel

@{
    ViewBag.Title = "Listado secciones";
}

<h2>Listado secciones</h2>

<p>
    @Html.ActionLink("Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.secciones.First().Titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.secciones.First().CursoId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.secciones.First().Posicion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.secciones.First().Portada)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.secciones) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Titulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CursoId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Posicion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Portada)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Activo)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.Id }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
