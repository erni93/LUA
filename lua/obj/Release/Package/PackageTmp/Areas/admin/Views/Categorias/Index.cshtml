@model lua.Models.ViewModels.CategoriaViewModel

@{
    ViewBag.Title = "Listado Categorías";
}

<h2>Listado de Categorías</h2>

<p>
    @Html.ActionLink("Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.categorias.First().Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.categorias.First().Activo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.categorias) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Activo)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.Id }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
