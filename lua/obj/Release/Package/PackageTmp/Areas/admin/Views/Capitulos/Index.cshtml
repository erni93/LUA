@model lua.Models.ViewModels.CapituloViewModel

@{
    ViewBag.Title = "Listado capítulos";
}

<h2>Listado capítulos</h2>

<p>
    @Html.ActionLink("Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.capitulos.First().Titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.capitulos.First().SeccionId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.capitulos.First().ContenidoHTML)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.capitulos.First().Posicion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.capitulos.First().Portada)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.capitulos.First().Activo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.capitulos) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Titulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SeccionId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContenidoHTML)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Posicion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Portada)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Activo)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.Id }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
