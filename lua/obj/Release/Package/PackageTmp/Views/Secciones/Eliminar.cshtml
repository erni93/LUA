@model lua.Models.ViewModels.SeccionFormViewModel

@{
    ViewBag.Title = "Eliminar sección";
}

<h2>Eliminar</h2>

<h3>¿Seguro que quieres eliminar la sección seleccionada?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.seccion.Titulo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.seccion.Titulo)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.seccion.Posicion)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.seccion.Posicion)
        </dd>

    </dl>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-danger" style="margin-bottom: 1em" />
        </div>
    }
    <a href="@Url.Action("Index", "Cursos")" class="btn btn-success"><i class="fa fa-chevron-left" aria-hidden="true"></i> <span>Volver a Mis Cursos</span></a>
</div>
