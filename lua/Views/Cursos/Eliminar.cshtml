@model lua.Models.ViewModels.CursoFormViewModel

@{
    ViewBag.Title = "Eliminar curso";
}
<h2>Eliminar Curso</h2>

<h3>¿Seguro que quieres eliminar el Curso seleccionado?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.curso.Portada)
        </dt>

        <dd>
            @if (Model.curso.Portada != null)
            {
                <img src="@(Model.curso.Portada)" class="imagenCurso'" />
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.curso.Titulo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.curso.Titulo)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.curso.FechaCreacion)
        </dt>

        <dd>
            @(Model.curso.FechaCreacion != null ? Model.curso.FechaCreacion.ToShortDateString() : "")
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-danger" style="margin-bottom: 1em" />
        </div>
    }
    <a href="@Url.Action("Index", "Cursos")" class="btn btn-success"><i class="fa fa-chevron-left" aria-hidden="true"></i> <span>Volver a Mis Cursos</span></a>
</div>
